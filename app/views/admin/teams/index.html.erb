<% content_for(:page_title) {"Teams"} %>

<h2>Teams</h2>

<div class='well well-small'>
  <h5>Testing api integration</h5>
  <p>Teams controller calls api/teams.json on another app, passing in params
    so pagination is passed through. Uses demo-api-adapters gem, a fork of gds-api-adapters
  </p>
</div>

<%= paginate(@presenter.teams) %>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Name</th>
    <th>Email address</th>
    <th></th>
    <th></th>
  </tr>
  <% @presenter.teams.each do |team| %>
    <tr>
      <td><%=team.name %></td>
     <td><%= team.email %></td>
     <td><%= link_to('Show', admin_team_path(team.id), class: 'btn') %></td>
     <td><%= link_to('Edit', edit_admin_team_path(team.id), class: 'btn') %></td>
    </tr>
  <% end %>

</table>

<br />

